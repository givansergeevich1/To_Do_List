<Window x:Class="ToDoList.Views.TaskDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Created:" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="0" Grid.Column="1" 
                  Text="{Binding CreatedAt, StringFormat=dd/MM/yyyy HH:mm:ss}"
                  Margin="0,0,0,10"/>

        <CheckBox Grid.Row="1" Grid.ColumnSpan="2" Content="Completed"
                 IsChecked="{Binding IsCompleted}" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" Text="Title:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Title}" 
                 Height="25" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="3" Text="Description:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Description}"
                 AcceptsReturn="True" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" Height="100"
                 Margin="0,0,0,15"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="Save_Click" Width="80" 
                    IsDefault="True" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80" IsCancel="True"/>
        </StackPanel>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>